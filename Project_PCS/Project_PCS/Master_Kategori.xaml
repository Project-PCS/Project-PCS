<UserControl x:Class="Project_PCS.Master_Kategori"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project_PCS"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="450" Margin="0,0,0,0" Stroke="Black" VerticalAlignment="Top" Width="800"/>
        <DataGrid x:Name="viewer" HorizontalAlignment="Left" Height="178" Margin="14,78,0,0" VerticalAlignment="Top" Width="775" SelectionChanged="Viewer_SelectionChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="61,274,0,0" TextWrapping="Wrap" Text="Nama" VerticalAlignment="Top" RenderTransformOrigin="-0.041,0.25"/>
        <TextBox x:Name="tbnama" HorizontalAlignment="Left" Height="23" Margin="131,274,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="Insert" HorizontalAlignment="Left" Margin="46,369,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button x:Name="btnUpdate" Content="Update" HorizontalAlignment="Left" Margin="200,369,0,0" VerticalAlignment="Top" Width="83" Click="BtnUpdate_Click"/>
        <CheckBox x:Name="cbxStatus" Content="" HorizontalAlignment="Left" Margin="132,309,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="60,309,0,0" TextWrapping="Wrap" Text="Status" VerticalAlignment="Top" RenderTransformOrigin="-0.041,0.25"/>
        <Button Content="Kembali" HorizontalAlignment="Left" Margin="12,19,0,0" VerticalAlignment="Top" Width="109" Click="Button_Click_1"/>
        <TextBlock HorizontalAlignment="Left" Margin="273,13,0,0" TextWrapping="Wrap" Text="Master Kategori" VerticalAlignment="Top" FontSize="32" FontWeight="Bold"/>
        <TextBox x:Name="tbSearch" HorizontalAlignment="Left" Height="22" Margin="615,29,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnSearch" Content="Search" HorizontalAlignment="Left" Margin="740,19,0,0" VerticalAlignment="Top" Width="30" Click="BtnSearch_Click">
            <Button.Background>
                <ImageBrush ImageSource="search.png"/>
            </Button.Background>
        </Button>

    </Grid>
</UserControl>
